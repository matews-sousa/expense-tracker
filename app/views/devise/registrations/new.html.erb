<div class="h-screen w-screen flex flex-col items-center justify-center">
  <div class="flex flex-col max-w-sm w-full p-4">
    <h2 class="text-4xl font-semibold mb-6 text-center">Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="space-y-2">
        <div class="form-control">
          <%= f.label :name, class: 'label label-text' %>
          <%= f.text_field :name, autofocus: true, class: "input input-bordered w-full" %>
          <p class="label label-text-alt text-red-400">
            <%= resource.errors.full_messages_for(:name).first %>
          </p>
        </div>
        <div class="form-control">
          <%= f.label :email, class: 'label label-text' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
          <p class="label label-text-alt text-red-400">
            <%= resource.errors.full_messages_for(:email).first %>
          </p>
        </div>
        <div class="form-control">
          <%= f.label :password, class: 'label label-text' %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
          <p class="label label-text-alt text-red-400">
            <%= resource.errors.full_messages_for(:password).first %>
          </p>
        </div>
        <div class="form-control">
          <%= f.label :password_confirmation, class: 'label label-text' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
          <p class="label label-text-alt text-red-400">
            <%= resource.errors.full_messages_for(:password_confirmation).first %>
          </p>
        </div>
      </div>
      <div class="my-4">
        <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
