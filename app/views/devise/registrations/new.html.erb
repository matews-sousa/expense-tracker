<div class="h-screen w-screen flex flex-col items-center justify-center">
  <div class="flex flex-col max-w-sm w-full p-4">
    <h2 class="text-4xl font-semibold mb-6 text-center">Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="space-y-2">
        <div class="flex flex-col">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full" %>
          <p class="text-red-500 text-xs italic">
            <%= resource.errors.full_messages_for(:email).first %>
          </p>
        </div>
        <div class="flex flex-col">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input w-full" %>
          <p class="text-red-500 text-xs italic">
            <%= resource.errors.full_messages_for(:password).first %>
          </p>
        </div>
        <div class="flex flex-col">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input w-full" %>
          <p class="text-red-500 text-xs italic">
            <%= resource.errors.full_messages_for(:password_confirmation).first %>
          </p>
        </div>
      </div>
      <div class="my-4">
        <%= f.submit "Sign up", class: "btn w-full" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
